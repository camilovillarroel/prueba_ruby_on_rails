<%= form_with(model: @todo, local: true) do |f| %>
<div class="form-group">
 <%= f.label :description %>
 <%= f.text_field :description , class:"form-control"%>
</div>
 <br>
 <div class="form-group">
 <%= f.check_box :completed %>
  <%= f.label :completed, 'Tarea completa', class:"form-control" %>
</div>
  <br>
 <%= f.submit 'Guardar' %>
<% end %>